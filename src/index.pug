doctype html
html(lang="EN")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.3/tiny-slider.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Lato|Lobster&amp;display=swap")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.6.3/css/all.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    link(rel="stylesheet", href="styles/style.scss")
    script(src="https://kit.fontawesome.com/d9c80b9818.js", crossorigin="anonymous")
  body
    main
      .container
        .slider-wrapper
          include html/slider.pug
          .centered
            .test #{values[0]}
          .text-centered
            p Lorem ipsum dolor sit amet, consectetur adipiscing elitas
        #controls 
          button.previous
            i.fa-solid.fa-arrow-left
          button.next
            i.fa-solid.fa-arrow-right      

      //- ////// Part 2 - Newsletter

      .bg-modal
        .modal-content
          .row
            .col
              .leftside
                include html/newsletter.pug
            .col
              .rightside
                h1.modal-tittle Newsletter Subscription
                p.modal-subtittle sign in to our newsletter
                form.form-content(id="form" action='/db.json' method="POST")
                input#email(type='email' name= 'email' placeholder="Type your email address" required)
                br
                .genre-container
                  p I'm
                  input.genre(type='radio' name='male-female' value='male' required)
                  label(for='male') Male
                  input.genre(type='radio' name='male-female' value='female' required)
                  label(for='female') Female
                br
                input#agree-conditions(type="checkbox", name="checkbox" value="checkbox" required) 
                label(for="agree-conditions") I agree to terms & conditions
                br
                input.btn.btn-dark#submit-btn(type="submit" value="submit")

          .close   
            .fa-solid.fa-circle-xmark

      //- script imported by tiny slider HAS to be there
    script(src='https://cdnjs.cloudflare.com/ajax/libs/tiny-slider/2.9.2/min/tiny-slider.js')
    script(src="js/index.js")
    

